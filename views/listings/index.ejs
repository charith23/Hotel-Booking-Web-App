<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WanderLust</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header>
      <h1>WanderLust</h1>
      <nav>
        <a href="/listings">Home</a>
        <a href="/listings/new">Add Listing</a>
      </nav>
    </header>
    <div class="container">
      <div style="display:flex; justify-content:flex-end; align-items:center; margin-bottom:1.5rem;">
        <form method="GET" action="/listings/new">
          <button class="btn" style="margin-top:0;">Create New Listing</button>
        </form>
      </div>
      <h2 style="color:#ff385c; font-family:'Montserrat',Arial,sans-serif;">Popular homes in Bengaluru</h2>
      <div class="listings-grid" style="display:flex; gap:2rem; overflow-x:auto; padding-bottom:1rem;">
        <% for(let i=0; i<6 && i<allListings.length; i++) { let listing = allListings[i]; %>
        <div class="listing-card" style="min-width:320px; max-width:320px; flex:0 0 auto; display:flex; flex-direction:column; background:#fff; border-radius:18px; box-shadow:0 2px 16px rgba(0,0,0,0.07);">
          <a href="/listings/<%= listing._id %>" style="display:block;">
            <img src="<%= listing.image %>" alt="<%= listing.title %>" style="width:100%; height:200px; object-fit:cover; border-radius:18px 18px 0 0;" />
          </a>
          <div class="listing-info" style="padding:1rem;">
            <div class="listing-title" style="font-size:1.1rem; font-weight:700; margin-bottom:0.3rem; color:#222;"><%= listing.title %></div>
            <div class="listing-location" style="color:#717171; font-size:0.95rem; margin-bottom:0.3rem;"><%= listing.location %>, <%= listing.country %></div>
            <div class="listing-price" style="color:#ff385c; font-weight:700; font-size:1rem; margin-bottom:0.3rem;">&#8377; <%= listing.price.toLocaleString("en-IN") %></div>
            <a href="/listings/<%= listing._id %>" class="btn" style="width:100%; text-decoration:none;">View Details</a>
          </div>
        </div>
        <% } %>
      </div>

      <h2 style="color:#ff385c; margin-top:2.5rem;">Available next month in South Goa</h2>
      <div class="listings-grid" style="display:flex; gap:2rem; overflow-x:auto; padding-bottom:1rem;">
        <% for(let i=6; i<12 && i<allListings.length; i++) { let listing = allListings[i]; %>
        <div class="listing-card" style="min-width:320px; max-width:320px; flex:0 0 auto; display:flex; flex-direction:column; background:#fff; border-radius:18px; box-shadow:0 2px 16px rgba(0,0,0,0.07);">
          <a href="/listings/<%= listing._id %>" style="display:block;">
            <img src="<%= listing.image %>" alt="<%= listing.title %>" style="width:100%; height:200px; object-fit:cover; border-radius:18px 18px 0 0;" />
          </a>
          <div class="listing-info" style="padding:1rem;">
            <div class="listing-title" style="font-size:1.1rem; font-weight:700; margin-bottom:0.3rem; color:#222;"><%= listing.title %></div>
            <div class="listing-location" style="color:#717171; font-size:0.95rem; margin-bottom:0.3rem;"><%= listing.location %>, <%= listing.country %></div>
            <div class="listing-price" style="color:#ff385c; font-weight:700; font-size:1rem; margin-bottom:0.3rem;">&#8377; <%= listing.price.toLocaleString("en-IN") %></div>
            <a href="/listings/<%= listing._id %>" class="btn" style="width:100%;">View Details</a>
          </div>
        </div>
        <% } %>
      </div>

      <form method="GET" action="/listings/new">
        <!-- Create New Listing button moved to top right -->
    </div>
    
  </body>
</html>
